ex:ExistenceKatalogu
    a sh:NodeShape ;
    sh:description "Existuje katalog"@cs ;
	sh:targetNode dcat:Catalog ;
    sh:property [
      sh:path [ sh:inversePath rdf:type ];
      sh:minCount 1;
    ] .

